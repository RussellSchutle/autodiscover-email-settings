<?xml version="1.0" encoding="utf-8"?>
<Autodiscover xmlns="http://schemas.microsoft.com/exchange/autodiscover/responseschema/2006">
  <Response xmlns="{{schema}}">
    <User>
      <DisplayName>{{info.name}}</DisplayName>
      <LegacyDN>/o=First Organization/ou=First Administrative Group/cn=Recipients/cn={{email}}</LegacyDN>
      <AutoDiscoverSMTPAddress>{{email}}</AutoDiscoverSMTPAddress>
    </User>
    <Account>
      <AccountType>email</AccountType>
      <Action>settings</Action>
      <MicrosoftOnline>False</MicrosoftOnline>
      <ConsumerMailbox>False</ConsumerMailbox>
      {%- if imap.host %}
      <Protocol>
        <Type>IMAP</Type>
        <Server>{{imap.host}}</Server>
        <SSL>{{imapssl}}</SSL>
        <Port>{{imap.port}}</Port>
        <LoginName>{{email}}</LoginName>
        <SPA>off</SPA>
      </Protocol>
      {% endif -%}
      {%- if smtp.host %}
      <Protocol>
        <Type>SMTP</Type>
        <Server>{{smtp.host}}</Server>
        <SSL>{{smtpssl}}</SSL>
        <Port>{{smtp.port}}</Port>
        <LoginName>{{email}}</LoginName>
        <SPA>off</SPA>
        <UsePOPAuth>off</UsePOPAuth>
      </Protocol>
      {% endif -%}
      {%- if pop.host %}
      <Protocol>
        <Type>POP3</Type>
        <Server>{{pop.host}}</Server>
        <SSL>{{smtpssl}}</SSL>
        <Port>{{pop.port}}</Port>
        <LoginName>{{email}}</LoginName>
        <SPA>off</SPA>
      </Protocol>
      {% endif -%}
  </Account>
  </Response>
</Autodiscover>
